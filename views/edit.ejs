<%- include('partials/header') %>
<%- include('partials/nav') %>

<!-- Edit Entry Form -->
<div class="container">
    <h1 class="h3 mb-4 mt-4">Edit Pet Care Entry</h1>
    <form action="/entries/edit/<%= entry._id%>" class="form" method="POST">
        <div class="form-group mb-3">
            <label for="petName">Pet Name</label>
            <input type="text" class="form-control" 
            id="petName" 
            name="petName" 
            placeholder="Your Pet's Name" 
            value="<%= entry.petName %>"
            required>
        </div>
        <div class="form-group mb-3">
            <label for="petType">Pet Type</label>
            <input type="text" class="form-control" 
            id="petType" 
            name="petType" 
            placeholder="Cat/Dog" 
            value="<%= entry.petType %>"
            required>
        </div>
        <div class="form-group mb-3">
            <label for="age">Age</label>
            <input type="number" class="form-control" 
            id="age" name="age" 
            placeholder="Your Pet's Age" 
            value="<%= entry.age %>"
            required>
        </div>
        <div class="form-group mb-3">
            <label for="entryType">Entry Type</label>
            <input type="text" class="form-control" 
            id="entryType" 
            name="entryType" 
            placeholder="Vaccination/Grooming/Vet Visit" 
            value="<%= entry.entryType %>"
            required>
        </div>
        <div class="form-group mb-3">
            <label for="date">Date</label>
            <input type="date" class="form-control" 
            id="date" 
            name="date" 
            placeholder="Date" 
            value="<%= entry.date %>"
            required>
        </div>
        <div class="form-group mb-3">
            <label for="vetName">Vet Name</label>
            <input type="text" class="form-control" 
            id="vetName" 
            name="vetName" 
            placeholder="Veterinarian's Name"
            value="<%= entry.vetName %>">
        </div>
        <div class="form-group mb-3">
            <label for="nextAppointment">Next Appointment</label>
            <input type="date" class="form-control" 
            id="nextAppointment" 
            name="nextAppointment" 
            placeholder="Next Appointment Date"
            value="<%= entry.nextAppointment %>">
        </div>
        <div class="form-group mb-3">
            <label for="notes">Notes</label>
            <textarea class="form-control" 
            id="notes" 
            name="notes" 
            rows="4" 
            placeholder="Additional notes about your pet's care">
            <%= entry.notes %>
            </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Edit Entry</button>
        <a href="/entries" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

<%- include('partials/footer') %>