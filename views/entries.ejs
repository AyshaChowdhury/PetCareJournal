<%- include('partials/header') %>
<%- include('partials/nav') %>

<main class="container py-5">
  <!-- Page heading + Add button -->
  <section class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h3 mb-0">Pet Journal Entries</h1>
      <a href="/entries/addentry" class="btn btn-primary">
        Add New Entry
      </a>
    </div>
  </section>

    <!-- Entries Table -->
     <div class="row">
        <div class="table-responsive bg-white rounded-3 shadow-sm">
            <table class="table table-hover mb-0 align-middle">
                <!-- Header Row -->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Pet Type</th>
                    <th class="text-center col-2">Age</th>
                    <th class="text-center col-2">Entry Type</th>
                    <th class="text-center col-2">Date</th>
                    <th class="text-center col-2">Vet Name</th>
                    <th class="text-center col-2">Next Appointment</th>
                    <th class="text-center col-2">Notes</th>
                </tr>
                <!-- for/while loop -->
                 <% for(let count=0; count < entries.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= entries[count].petName %></td>
                        <td class="text-center col-2"><%= entries[count].petType %></td>
                        <td class="text-center col-2"><%= entries[count].age %></td>
                        <td class="text-center col-2"><%= entries[count].entryType %></td>
                        <td class="text-center col-2"><%= entries[count].date %></td>
                        <td class="text-center col-2"><%= entries[count].vetName %></td>
                        <td class="text-center col-2"><%= entries[count].nextAppointment %></td>
                        <td class="text-center col-2"><%= entries[count].notes %></td>
                    </tr>
                    <% } %>

            </table>
        </div>
     </div>

</main>

<%- include('partials/footer') %>
